/**
 * Access callback for crop plan tabs.
 */
function farm_crop_plan_access($plan) {

  // If the plan is not a crop plan, deny access.
  if ($plan->type != 'crop') {
    return FALSE;
  }

  // Defer to the farm plan access callback.
  return farm_plan_access('update', $plan);
}

